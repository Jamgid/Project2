
 {{>nav2}}

<section id="doctors" class="container" style="min-height: 800px;">
  <div class="container">
    <div class="row">
      <div class="col-md-8">
        <h1>All Doctors <i class="fas fa-stethoscope" style="margin-top:2rem;"></i></h1>
          {{#each doctors}}
       <div class="card mb-3" style="max-width: 540px; margin-top:2rem;">
       <div class="row no-gutters">
        <div class="col-md-4">
          <img src="..." class="card-img" alt="...">
        </div>
        <div class="col-md-8">
          <div class="card-body ">
            <h3 class="card-title text-success">{{this.name}}</h3>
            <p class="card-text">Email: {{email}}</p>
            <p class="card-text">Phone: {{phone}}</p>
            <p class="card-text">{{city}} {{state}} {{zipcode}} </p>
            <p class="card-text">Speciality: {{speciality}}</p>
        
          </div>
        </div>
        </div>
        </div>
      
        {{else}}
          <p>Doctors not available!</p>
        {{/each}}
      </div>  
      <div class="col-md-4">

          <div class="card border-primary mb-3 float-right" style="max-width: 35rem; margin-top:4rem;">
            <div class="card-header">
              <h3 class="text-center text-capitalize text-dark">
                Let <span class="text-info">us</span> help 
                <span class="text-success">you</span> 
                connect to new </br> health care providers 
                and keep track of ones you already have.
              </h3>
            </div>
            <div class="card-body">
              <h4 class="card-title text-center">
                We're here to help
              </h4>
              <p class="card-text">
                <img class="w-100 float-right" 
                src="assets/doctors1.png" 
                alt="Doctors">
              </p>
            </div>
        </div>
      </div>  
    </div>  
  </div>
</section>


 {{>footer}}