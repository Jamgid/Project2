<section id="add" class="container">
    <div class="form-wrap border border-success w-50 p-3 align-middle">
      <h1>Add A Doctor <i class="fas fa-notes-medical"></i></h1>
     <div class="row-g-3">
       <div class="col-md-6">
          <form action="/doctors/add" method="POST">
            <div class="form-group">
              <label for="name">Name</label>
              <input class="form-control border border-primary rounded-pill" type="text" name="name" id="name" class="input-box" placeholder="eg. Jon Doe"
                maxlength="100" value={{name}}>
            </div>
            <div class="form-group">
              <label for="email">Email</label>
              <input class="form-control border border-primary rounded-pill" type="email" name="email" id="email" class="input-box" placeholder="Enter an email" value={{email}}>
            </div>
            <div class="form-group">
              <label for="Phone">Phone</label>
              <input class="form-control border border-primary rounded-pill" type="text" name="phone" id="Phone" class="input-box" placeholder="1234567899"
              maxlength="100" value={{phone}}>
            </div>
            <div class="form-group">
              <label for="city">city</label>
              <input class="form-control border border-primary rounded-pill" type="text" name="city" id="city" class="input-box" placeholder="Troy"
              maxlength="100" value={{city}}>
            </div>
            <div class="form-group">
              <label for="zipcode">zipcode</label>
              <input class="form-control border border-primary rounded-pill" type="text" name="zipcode" id="zipcode" class="input-box" placeholder="12345"
              maxlength="100" value={{zipcode}}>
            </div>
            <div class="form-group">
              <label for="state">state</label>
              <input class="form-control border border-primary rounded-pill" type="text" name="state" id="state" class="input-box" placeholder="MI"
              maxlength="100" value={{state}}>
            </div>
            <div class="form-group">
              <label for="speciality">speciality</label>
              <input class="form-control border border-primary rounded-pill" type="text" name="speciality" id="speciality" class="input-box" placeholder="CARDIOLOGY"
              maxlength="100" value={{speciality}}>
            </div>
            
            <input class="btn btn-sm btn-light border border-primary rounded-pill" type="submit" value="Add Doctor" class="btn btn-reverse">
          </form>
        </div>
      </div>    
    </div>
    <img class="float-right" src="assets/doctors4.jpg" alt=".....">
  </section>
  {{>footer}}

